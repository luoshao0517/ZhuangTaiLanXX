<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.luodacheng.myapplication.ZidingyiActivity">

    <Button
        android:id="@+id/btn_zidingyi"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="显示自定义通知栏"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="3dp" />

    <Button
        android:id="@+id/btn_anniu_zidingyi"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:text="显示带按钮的自定义通知栏"
        app:layout_constraintTop_toBottomOf="@+id/btn_zidingyi"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="注意：通知栏按钮只适合3.0以上版本"
        app:layout_constraintTop_toBottomOf="@+id/btn_anniu_zidingyi"
        tools:layout_editor_absoluteX="26dp" />
</android.support.constraint.ConstraintLayout>
